<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncryptFileActivity">

    <Button
        android:id="@+id/btn_choose_file"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorAccent"
        android:gravity="top"
        android:text="           add file ..." />
        <TextView
            android:id="@+id/empty"
            android:text="Danh sách mã hóa trống "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone" />
        />

    <ListView
        android:id="@+id/list_view_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_choose_file"></ListView>
    <Button
        android:id="@+id/continue_btn_encrypt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/bg_screen3"
        android:onClick="encriptFile"
        android:text="Hoàn tất" />
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/progressBarCircle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/progressBarHorizontal"
            android:id="@+id/textProcessBar"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />
        <ProgressBar
            android:id="@+id/progressBarHorizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
</RelativeLayout>
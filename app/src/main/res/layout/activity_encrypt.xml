<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EncryptFileActivity"
    android:gravity="top"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/btn_choose_file"
            android:layout_width="214dp"
            android:layout_height="47dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="openFileChooser"
            android:text="add file ..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            android:layout_margin="15dp"
            app:layout_constraintVertical_bias="0.046" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/empty"
            android:text="Danh sách mã hóa trống "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_centerInParent="true"
            android:gravity="center"

            android:layout_gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_choose_file"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone" />
        />
        <ListView
            android:id="@+id/list_view_file"
            android:layout_width="356dp"
            android:layout_height="413dp"
            android:descendantFocusability="blocksDescendants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_choose_file"
            app:layout_constraintVertical_bias="0.154" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/continue_btn_encrypt"
            android:layout_width="120dp"
            android:layout_height="51dp"
            android:backgroundTint="@color/bg_screen3"
            android:text="Hoàn tất"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:onClick="encriptFile"
            android:layout_marginRight="20dp"
            app:layout_constraintHorizontal_bias="0.905"
            app:layout_constraintVertical_bias="0.895" />
    </LinearLayout>


</LinearLayout>